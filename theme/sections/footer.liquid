      "default": "Where science-backed recovery meets community. Self-care made social."
    },
    {
      "type": "header",
      "content": "Newsletter"
    },
    {
      "type": "checkbox",
      "id": "show_newsletter",
      "label": "Show Newsletter",
      "default": true
    },
    {
      "type": "text",
      "id": "newsletter_placeholder",
      "label": "Placeholder Text",
      "default": "Enter your email"
    },
    {
      "type": "text",
      "id": "newsletter_button",
      "label": "Button Text",
      "default": "Join"
    },
    {
      "type": "header",
      "content": "Social Links"
    },
    {
      "type": "url",
      "id": "social_instagram",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "social_tiktok",
      "label": "TikTok URL"
    },
    {
      "type": "url",
      "id": "social_linkedin",
      "label": "LinkedIn URL"
    }
  ],
  "blocks": [
    {
      "type": "menu",
      "name": "Menu",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Explore"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    },
    {
      "type": "contact",
      "name": "Contact Info",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Contact"
        },
        {
          "type": "textarea",
          "id": "address",
          "label": "Address"
        },
        {
          "type": "text",
          "id": "phone",
          "label": "Phone"
        },
        {
          "type": "text",
          "id": "email",
          "label": "Email"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "menu",
        "settings": {
          "title": "Explore"
        }
      },
      {
        "type": "menu",
        "settings": {
          "title": "Company"
        }
      },
      {
        "type": "contact",
        "settings": {
          "title": "Visit Us",
          "email": "hello@breathewellness.com"
        }
      }
    ]
  }
}
{% endschema %}





