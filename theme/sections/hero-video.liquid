{%- comment -%}
  BREATHE WELLNESS SANCTUARY - Hero Video Section
  "Soho House for Longevity" - Cinematic, slow-motion video header
{%- endcomment -%}

<section class="hero hero-video-section" data-section-id="{{ section.id }}">
  {%- comment -%} Video Background {%- endcomment -%}
  <div class="hero-video-container">
    {%- if section.settings.video != blank -%}
      {{ section.settings.video | video_tag: 
          autoplay: true, 
          loop: true, 
          muted: true, 
          playsinline: true,
          class: 'hero-video',
          poster: section.settings.poster_image | image_url: width: 1920
      }}
    {%- elsif section.settings.video_url != blank -%}
      <video class="hero-video" 
             autoplay 
             loop 
             muted 
             playsinline
             poster="{{ section.settings.poster_image | image_url: width: 1920 }}">
        <source src="{{ section.settings.video_url }}" type="video/mp4">
      </video>
    {%- else -%}
      {%- comment -%} Fallback poster image {%- endcomment -%}
      <div class="hero-image-fallback">
        {%- if section.settings.poster_image != blank -%}
          <img src="{{ section.settings.poster_image | image_url: width: 1920 }}"
               alt="{{ section.settings.heading | escape }}"
               loading="eager"
               class="hero-video">
        {%- else -%}
          <div class="hero-placeholder bg-tadelakt"></div>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- comment -%} Overlays {%- endcomment -%}
    <div class="hero-overlay"></div>
    <div class="hero-warm-filter"></div>
  </div>

  {%- comment -%} Content {%- endcomment -%}
  <div class="hero-content container">
    {%- if section.settings.eyebrow != blank -%}
      <span class="hero-eyebrow" data-animate="fade-in-up" data-delay="0">
        {{ section.settings.eyebrow }}
      </span>
    {%- endif -%}

    <h1 class="hero-title" data-animate="fade-in-up" data-delay="1">
      {{ section.settings.heading | default: 'Self-Care Made Social' }}
    </h1>

    {%- if section.settings.subheading != blank -%}
      <p class="hero-subtitle" data-animate="fade-in-up" data-delay="2">
        {{ section.settings.subheading }}
      </p>
    {%- endif -%}

    <div class="hero-cta-group" data-animate="fade-in-up" data-delay="3">
      {%- if section.settings.primary_button_text != blank -%}
        <a href="{{ section.settings.primary_button_url }}" class="btn btn--primary">
          {{ section.settings.primary_button_text }}
        </a>
      {%- endif -%}

      {%- if section.settings.secondary_button_text != blank -%}
        <a href="{{ section.settings.secondary_button_url }}" class="btn btn--ghost">
          {{ section.settings.secondary_button_text }}
        </a>
      {%- endif -%}
    </div>
  </div>

  {%- comment -%} Scroll Indicator {%- endcomment -%}
  {%- if section.settings.show_scroll_indicator -%}
    <div class="scroll-indicator">
      <span>Scroll</span>
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
        <path d="M12 5L12 19M12 19L5 12M12 19L19 12"/>
      </svg>
    </div>
  {%- endif -%}
</section>

<style>
  .hero-video-section {
    position: relative;
    min-height: {{ section.settings.hero_height }}vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-video-container {
    position: absolute;
    inset: 0;
    z-index: -1;
  }

  .hero-video,
  .hero-placeholder {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      {{ section.settings.overlay_direction }}deg,
      rgba(44, 24, 16, {{ section.settings.overlay_opacity_top | divided_by: 100.0 }}) 0%,
      rgba(44, 24, 16, {{ section.settings.overlay_opacity_bottom | divided_by: 100.0 }}) 100%
    );
  }

  .hero-warm-filter {
    position: absolute;
    inset: 0;
    background: rgba(255, 217, 168, {{ section.settings.warm_filter_intensity | divided_by: 100.0 }});
    mix-blend-mode: overlay;
    pointer-events: none;
  }

  .hero-content {
    text-align: {{ section.settings.text_alignment }};
    max-width: 1000px;
    padding: var(--space-xl) var(--space-md);
    color: var(--color-sanctuary-white);
  }

  .hero-eyebrow {
    display: block;
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.35em;
    text-transform: uppercase;
    color: var(--color-warm-glow);
    margin-bottom: var(--space-sm);
    opacity: 0;
  }

  .hero-title {
    font-family: var(--font-heading);
    font-size: clamp(2.5rem, 7vw, 5.5rem);
    font-weight: 300;
    line-height: 1.1;
    letter-spacing: -0.02em;
    color: var(--color-sanctuary-white);
    margin-bottom: var(--space-md);
    opacity: 0;
  }

  .hero-subtitle {
    font-size: clamp(1rem, 2vw, 1.375rem);
    font-weight: 300;
    line-height: 1.7;
    max-width: 650px;
    margin: 0 auto var(--space-lg);
    opacity: 0;
    color: rgba(255, 255, 255, 0.9);
  }

  {% if section.settings.text_alignment == 'left' %}
    .hero-subtitle {
      margin-left: 0;
    }
  {% elsif section.settings.text_alignment == 'right' %}
    .hero-subtitle {
      margin-right: 0;
    }
  {% endif %}

  .hero-cta-group {
    display: flex;
    align-items: center;
    justify-content: {{ section.settings.text_alignment }};
    gap: var(--space-sm);
    flex-wrap: wrap;
    opacity: 0;
  }

  .scroll-indicator {
    position: absolute;
    bottom: 2.5rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-sanctuary-white);
    font-size: 0.6875rem;
    font-weight: 500;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    opacity: 0.7;
    animation: float 3s ease-in-out infinite;
  }

  .scroll-indicator svg {
    transform: rotate(180deg);
  }

  @keyframes float {
    0%, 100% { 
      transform: translateX(-50%) translateY(0); 
    }
    50% { 
      transform: translateX(-50%) translateY(-10px); 
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-video-section {
      min-height: 100vh;
    }

    .hero-cta-group {
      flex-direction: column;
      width: 100%;
    }

    .hero-cta-group .btn {
      width: 100%;
      max-width: 300px;
    }
  }

  /* Animation triggers */
  .hero-video-section [data-animate].animated {
    opacity: 1;
  }
</style>

