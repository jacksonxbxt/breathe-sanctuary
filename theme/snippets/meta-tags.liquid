          }
        ]
      },
      {
        "@type": "OfferCatalog",
        "name": "Memberships",
        "itemListElement": [
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "The Restore Membership"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "The Ritual Membership"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "The Sanctuary Membership"
            }
          }
        ]
      }
    ]
  }
}
</script>





